<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/activity_serial_port"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/id_serial_port_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/id_beam_00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="beam00"
        android:text="增强BEAM00"/>

    <Button
        android:id="@+id/id_beam_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="beam01"
        android:text="增强BEAM01"/>

    <Button
        android:id="@+id/id_beam_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="beam02"
        android:text="增强BEAM02"/>

    <Button
        android:id="@+id/id_beam_03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="beam03"
        android:text="增强BEAM03"/>


</LinearLayout>
